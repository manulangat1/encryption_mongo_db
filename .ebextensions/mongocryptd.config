packages:
  yum:
    libcurl-devel: []
    gcc: []
    krb5-devel: []
    openssl-devel: []
    cyrus-sasl-devel: []
    libmongocrypt-devel: []

commands:
  start_mongocryptd:
    command: "mongocryptd --pidfilepath /var/run/mongocryptd.pid --logpath /var/log/mongocryptd.log --daemon"
    ignoreErrors: true
    runas: root
  change_permissions:
    command: "chown -R mongod:mongod /var/run/mongocryptd.pid /var/log/mongocryptd.log"
    ignoreErrors: true
    runas: root
